#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# close and kill
super + shift + q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}


#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{j,k,i,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {u,o}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#

# preselect the direction
super + ctrl + {j,k,i,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {j,k,i,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
super + alt + shift + {j,k,i,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}


#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
if `xrandr -q | grep -q "HDMI2 connected"`
then
super + d
	dmenu_run -b -p "RUN" -i -x 10 -y 10 -w 1900 -nf "#cfdceb" -sb "#cd222f" -sf "#f7f7f7" -nb "#0a0f14" -fn "Iosevka Slab-9"
else
super + d
	dmenu_run -b -nf "#a9aeb4" -sb "#B21818" -sf "#f7f7f7" -nb "#080a11" -fn "Fixed-8"
fi

super + shift + d
        dmenu_extended_run 

# screenshot with scrot
Print
        scrot -e 'mv $f ~/Pictures/screenshots' && notify-send "Screenshot Taken"

# kill screencast
super + x
        pkill -f 'x11grab' 

# lockscreen
alt + shift + x
        betterlockscreen -l -t ""

# suspend
super + alt + shift + s
        systemctl suspend

# brightness control
XF86MonBrightnessUp
        xbacklight -inc 20
XF86MonBrightnessDown
        xbacklight -dec 20

# volume control
XF86AudioRaiseVolume 
        amixer set Master 5%+ 
XF86AudioLowerVolume
        amixer set Master 5%-
XF86AudioMute 
        amixer set Master toggle

# Ncmpcpp Control
super + ctrl + Left
        mpc prev && $HOME/.config/popups/ncmpcpp/current_playing
super + ctrl + Right
        mpc next && $HOME/.config/popups/ncmpcpp/current_playing
super + ctrl + Up
        mpc play && $HOME/.config/popups/ncmpcpp/current_playing
super + ctrl + Down
        mpc pause

# my apps shortcut
super + ctrl + f
        firefox
super + ctrl + c
        chromium
super + ctrl + b
        burpsuite
super + ctrl + w
        wireshark
super + ctrl + e
        pcmanfm
super + ctrl + m
        maltego_custom
super + ctrl + t
        $HOME/.config/popups/todo/todo
